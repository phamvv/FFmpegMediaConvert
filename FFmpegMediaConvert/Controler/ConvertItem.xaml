<UserControl x:Class="FFmpegMediaConvert.Controler.ConvertItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFmpegMediaConvert.Controler"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="progressBar" Grid.RowSpan="2" Value="20"/>
        <TextBlock x:Name="txt_fileName" Text="File Name" FontSize="14" FontWeight="Bold" Padding="5,0,5,0" VerticalAlignment="Center"/>
        <TextBlock x:Name="txt_message" Grid.Row="1" Text="all the message will show" Padding="5,0,5,0" Foreground="Black" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
